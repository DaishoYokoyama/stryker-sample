{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": "."
  },
  "exclude": ["node_modules"]
}
